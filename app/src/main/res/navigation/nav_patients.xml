<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_patients"
    app:startDestination="@id/patientsFragment">

    <fragment
        android:id="@+id/patientsFragment"
        android:name="com.example.ssp.ui.patients.PatientsFragment"
        android:label="Pacientes"
        tools:layout="@layout/fragment_patiens">
        <action
            android:id="@+id/action_patientsFragment_to_patientDetailsFragment"
            app:destination="@id/patientDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/patientDetailsFragment"
        android:name="com.example.ssp.ui.patients.PatientDetailsFragment"
        android:label="Detalles del Paciente"
        tools:layout="@layout/fragment_patient_details">
        <argument
            android:name="patient"
            app:argType="com.example.ssp.model.Patient" />
        <action
            android:id="@+id/action_patientDetailsFragment_to_patientEditFragment2"
            app:destination="@id/patientEditFragment2" />
    </fragment>
    <fragment
        android:id="@+id/patientEditFragment2"
        android:name="com.example.ssp.ui.patients.PatientEditFragment"
        android:label="Editar Paciente" >
        <argument
            android:name="patient"
            app:argType="com.example.ssp.model.Patient" />
    </fragment>
</navigation>